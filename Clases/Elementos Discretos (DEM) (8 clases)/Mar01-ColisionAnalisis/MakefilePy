# Opciones de compilaciÃ³n
CXXFLAGS = 


# Compilador
CC = python3

all: Planetas.gif

%.x: %.ipynb
	CC $(CXXFLAGS) $^ -o $@

data.txt: Planetas.x
	./$^ > $@

Planetas.gif: data.txt
	gnuplot $^

.PHONY: clean

clean:
	rm -f *.x *.gp *.pdf 


